  "schemes": [
    "http"
  ],
  "paths": {
    "/address/bitcoin/generateSegwitAddress": {
      "post": {
        "tags": [
          "address"
        ],
        "summary": "Generate a Hierarchical Deterministic (HD) Segregated Witness (SegWit) bitcoin address from a given seed and path",
        "description": "",
        "parameters": [
          {
            "name": "Payload",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "seed",
                "account",
                "change",
                "index"
              ],
              "properties": {
                "seed": {
                  "type": "string",
                  "default": "praise you muffin lion enable neck grocery crumble super myself license ghost",
                  "description": "Seed phrase"
                },
                "account": {
                  "type": "number",
                  "default": 0,
                  "description": "Account"
                },
                "change": {
                  "type": "number",
                  "default": 0,
                  "description": "0: not change (external), 1: change (internal)"
                },
                "index": {
                  "type": "number",
                  "default": 0,
                  "description": "Index"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/AddressMessage"
            }
          },
          "400": {
            "description": "BadRequest",
            "schema": {
              "$ref": "#/definitions/GeneralErrorMessage"
            }
          }
        }
      }
    },
    "/address/bitcoin/generateP2SHAddress": {
      "post": {
        "tags": [
          "address"
        ],
        "summary": "Generate an n-out-of-m Multisignature (multi-sig) Pay-To-Script-Hash (P2SH) bitcoin address, where n, m and addresses can be specified ",
        "description": "",
        "parameters": [
          {
            "name": "Payload",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "addresses",
                "public_keys",
                "n"
              ],
              "properties": {
                "addresses": {
                  "type": "array",
                  "default": [
                    "1PLDRLacEkAaaiWnfojVDb5hWpwXvKJrRa",
                    "1BAgzvv2gsUjx7owJeSFhtexQ97yWQFEZe",
                    "16nnTfKoJijyrKcxzD4U9x5ku6saCoCYdj"
                  ],
                  "description": "P2PKH addresses",
                  "items": {
                    "type": "string",
                    "default": "1PLDRLacEkAaaiWnfojVDb5hWpwXvKJrRa",
                    "description": "P2PKH address"
                  }
                },
                "public_keys": {
                  "type": "array",
                  "default": [
                    "033b3aa196c22d0765965ea37ad01eaf8eafbce74e15dc8c47fdaa193fc02e7a46",
                    "02290fab3a48a7d43e1db0a74404d32660648841faa16e069bced29bda4a5e28c1",
                    "03375f613b3d4c6c62f42fb74652c9452007ebfe57c6ed29ff59e87ec29b2d6ce6"
                  ],
                  "description": "Public keys in hex",
                  "items": {
                    "type": "string",
                    "description": "Public key in hex"
                  }
                },
                "n": {
                  "type": "number",
                  "default": 2,
                  "description": "n out of m (number of addresses/public_keys)"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/AddressMessage"
            }
          },
          "400": {
            "description": "BadRequest",
            "schema": {
              "$ref": "#/definitions/GeneralErrorMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AddressMessage": {
      "type": "object",
      "required": [
        "address"
      ],
      "properties": {
        "address": {
          "type": "string",
          "description": "Returned address"
        }
      }
    },
    "GeneralErrorMessage": {
      "type": "object",
      "properties": {
        "error": {
          "type": "number",
          "default": "Error code"
        },
        "message": {
          "type": "number",
          "default": "Detailed error message"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}